{
  "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": [
        "node"
      ],      
      "lib": [
          "es2015"
      ],
      "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],  
  "include": [
      "./src/**/*"
  ]
}